<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:windowActionBar="false"
    tools:context="com.machineproject.commuter.MainActivity">

    <ImageView
        android:id="@+id/iconMain"
        android:layout_marginTop="100dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_directions_car_black_48dp"/>
    <EditText
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:id="@+id/email_login"
        android:layout_below="@id/iconMain"
        />

    <EditText
        android:layout_width="325dp"
        android:textSize="14dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:id="@+id/password_login"
        android:layout_below="@id/email_login"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_login"
        android:textColor="#F44336"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_status"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Register"
            android:id="@+id/register_account"
            android:background="#009688"
            android:textColor="#ffffff"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="LOG-IN"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:background="#009688"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/register_account"
            android:id="@+id/login"/>
    </RelativeLayout>
</RelativeLayout>
